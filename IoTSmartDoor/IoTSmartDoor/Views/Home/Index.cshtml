@using Microsoft.AspNetCore.Identity
@using IoTSmartDoor.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home";
}
<br />

@if (SignInManager.IsSignedIn(User))
{
    <h2>@UserManager.GetUserAsync(User).Result.Name</h2>
    <h4>@UserManager.GetUserAsync(User).Result.Email</h4>
    <br />
    <img src="~/images/@UserManager.GetUserAsync(User).Result.ImageName" alt="Image" />
    
}
else
{
    <iframe width="100%" height="600" src="https://www.youtube.com/embed/3xYXUeSmb-Y?rel=0" frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen></iframe>
}
